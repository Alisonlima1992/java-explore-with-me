    {
      "name": "Stats Service API",
      "item": [
        {
          "name": "POST /hit - Save endpoint hit",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "pm.test(\"Status code is 201\", function () {",
                  "    pm.response.to.have.status(201);",
                  "});",
                  "",
                  "pm.test(\"Response has ID\", function () {",
                  "    var jsonData = pm.response.json();",
                  "    pm.expect(jsonData.id).to.be.a('number');",
                  "    pm.expect(jsonData.app).to.eql(\"ewm-main-service\");",
                  "    pm.expect(jsonData.uri).to.eql(\"/events/1\");",
                  "});"
                ]
              }
            }
          ],
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"app\": \"ewm-main-service\",\n  \"uri\": \"/events/1\",\n  \"ip\": \"192.168.1.1\",\n  \"timestamp\": \"2024-01-15 10:00:00\"\n}"
            },
            "url": {
              "raw": "http://localhost:9090/hit",
              "protocol": "http",
              "host": ["localhost"],
              "port": "9090",
              "path": ["hit"]
            }
          },
          "response": []
        },
